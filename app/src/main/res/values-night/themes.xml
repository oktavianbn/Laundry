<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- Tema tanpa ActionBar (untuk MainActivity) -->
    <style name="Theme.MyApp.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar"/>

    <!-- res/values-night/themes.xml (untuk dark mode) -->
    <style name="Theme.MyApp.WithActionBar" parent="Theme.Material3.DayNight">
        <item name="android:statusBarColor">#1a2239</item>

        <!-- Warna background action bar -->
        <item name="colorPrimary">#1a2239</item>
        <!-- Warna teks (judul & subtitle) -->
        <item name="android:textColorPrimary">#F2DCCC</item>
    </style>

    <style name="textViewStyle">
        <item name="android:textColor">#F2DCCC</item>
    </style>
    <style name="backgroundStyle">
        <item name="android:background">#1a2239</item>
    </style>
    <style name="cardViewStyle">
        <item name="android:backgroundTint">#1F2845</item>
    </style>
    <style name="buttonStyle1">
        <item name="android:backgroundTint">#FAEEAF</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="buttonStyle2">
        <item name="android:backgroundTint">#fdfcfa</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="fabStyle">
        <item name="android:backgroundTint">#FAEEAF</item>
        <item name="android:src">@drawable/baseline_add_24_dark</item>
    </style>
    <style name="deleteButton">
        <item name="backgroundTint">#1F2845</item>
<!--        <item name="android:src">@drawable/delete_24px</item>"-->
    </style>
</resources>
