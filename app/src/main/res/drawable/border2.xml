<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background atau isi komponen -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00FFFFFF" /> <!-- Warna isi -->
        </shape>
    </item>

    <!-- Border -->
    <item android:top="5dp" android:left="5dp" android:right="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#00FFFFFF" /> <!-- Isi kosong -->
            <stroke
                android:width="5dp"
                android:color="#03A9F4" /> <!-- Warna border -->
        </shape>
    </item>
</layer-list>
